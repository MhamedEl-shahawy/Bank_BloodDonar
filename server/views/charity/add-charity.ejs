<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="myContainer center">
    <p>Add a Patient</p>
    <form action="/add-charity" method="POST">
      <label for="charityName">Charity Name</label>
      <input type="text" name="charityName" id="charityName" />

      <label for="phoneNumber">Phone</label>
      <input type="text" name="phoneNumber" id="phoneNumber" />

      <label for="address">Address</label>
      <input type="text" name="address" id="address" />

      <label for="description">Description</label>
      <textarea name="description" id="description" cols="30" rows="10" placeholder="Enter your Description Here"></textarea>
      
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" /> 
      <button class="myButton" type="submit">Submit</button>
    </form>
  </main>

