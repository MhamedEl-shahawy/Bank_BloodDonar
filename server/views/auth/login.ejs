<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <script type="text/javascript" src="../../public/js/login.js"></script>

</head>

<body>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
            <img class="wave" src="../../images/logwave.png">
    <div class="container">
        <div class="img">
            <img src="../../images/./logbg.svg">
        </div>
        <div class="login-content">
            <form  class="login" action="/login" method="POST">
                <img src="../../images/logavatar.svg">
                <h2 class="title">Welcome</h2>
                <div class="input-div one">
                   <div class="i">
                        <i class="fas fa-user"></i>
                   </div>
                   <div class="div">
                        <h5>Username</h5>
                        <input
                           class="input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                           type="email" 
                           name="email" 
                           id="email" 
                           value="<%= oldInput.email %>">
                   </div>
                </div>
                <div class="input-div pass">
                   <div class="i"> 
                        <i class="fas fa-lock"></i>
                   </div>
                   <div class="div">
                        <h5>Password</h5>
                        <input type="password" 
                           class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                           name="password" 
                           id="password" 
                           value="<%= oldInput.password %>">
                   </div>
                </div>
                <a href="/reset">Forgot Password?</a>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="submit" class="btn" value="Login">
                <p>Or</p>
                <a href="/signup" class="btn">SignUp</a>

            </form>
        </div>
    </div>
    </main>
<%- include('../includes/end.ejs') %>