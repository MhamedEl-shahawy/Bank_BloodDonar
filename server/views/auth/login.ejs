<!DOCTYPE html>
<html>
  <head>
    <title>Blood Donar</title>
    <link rel="stylesheet" type="text/css" href="/css/login.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
  </head>

  <body>

    <main>
		
      <!-- <img class="wave" src="/images/login/wave.png" /> -->
      <div class="container">
        <div class="img">
          <img src="/images/login/logbg.svg" />
        </div>
        <div class="login-content">
          <form class="login" action="/log-in" method="POST">
            <img src="/images/user/profile.svg" />
            <h2 class="title">Welcome</h2>
            <div class="input-div one">
              <div class="i">
                <i class="fas fa-user"></i>
              </div>
              <div class="div">
                <h5>Username</h5>
                <input
                  class="input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                  type="email"
                  name="email"
                  id="email"
                  value="<%= oldInput.email %>"
                />
              </div>
            </div>
            <div class="input-div pass">
              <div class="i">
                <i class="fas fa-lock"></i>
              </div>
              <div class="div">
                <h5>Password</h5>
                <input
                  type="password"
                  class="input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                  name="password"
                  id="password"
                  value="<%= oldInput.password %>"
                />
              </div>
            </div>
            <a href="/reset">Forgot Password?</a>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="submit" class="btn" value="Login" />
            <p>Or</p>
            <a href="/sign-up" class="btn">SignUp</a>
            <% if (errorMessage) { %>
            <div class="user-message user-message--error">
              <%= errorMessage %>
            </div>
            <% } %>
          </form>
        </div>
      </div>
    </main>
    <script type="text/javascript" src="/js/login.js"></script>
  </body>
</html>
