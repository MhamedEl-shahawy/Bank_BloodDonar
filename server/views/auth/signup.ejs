    <!-- start form  -->
    <form class="form" action="/sign-up" method="POST">
        <div class="form__title">
            <p class="form__p">SIGNUP FORM</p>
            <h2 class="form__h2">Join to Unlock more Features</h2>
        </div>
        <div class="form__container">
            <input 
            type="text" 
            class="<%= validationErrors.find(e => e.param === 'firstName') ? 'invalid' : '' %>  form__input" 
            name="firstName" id="firstName" 
            placeholder="First name"
            value="<%= oldInput.firstName %>">
            <input 
            type="text" 
            name="lastName" 
            class="<%= validationErrors.find(e => e.param === 'lastName') ? 'invalid' : '' %>  form__input" 
            id="lastName" 
            placeholder="Last name"
            value="<%= oldInput.lastName %>">
        </div>
        <div class="form__container form__container_w">
            <input 
            type="email" 
            class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>  form__input" 
            name="email" 
            id="email" 
            placeholder="E-mail"
            value="<%= oldInput.email %>">
        </div>
        <div class="form__container">
            <input 
            type="text" 
            class="<%= validationErrors.find(e => e.param === 'state') ? 'invalid' : '' %>  form__input" 
            id="state" 
            name="state" 
            placeholder="State"
            value="<%= oldInput.state %>">
            <input 
            type="text" 
            class="<%= validationErrors.find(e => e.param === 'city') ? 'invalid' : '' %>  form__input" 
            name="city" 
            id="city" 
            placeholder="City"
            value="<%= oldInput.city %>">
        </div>
        <div class="form__container">
            <select class="form__input form__input_select <%= validationErrors.find(e => e.param === 'code') ? 'invalid' : '' %>" name="code" id="code" value="<%= oldInput.code %>"> 
                <option value="+20">+20</option>
                <option value="+966">+966</option>
                <option value="<%= oldInput.code%>"><%= oldInput.code%></option>
              </select>
            <input 
            type="number" 
            class="<%= validationErrors.find(e => e.param === 'phoneNumber') ? 'invalid' : '' %>  form__input" 
            name="phoneNumber" 
            id="phoneNumber" 
            placeholder="Phone number"
            value="<%= oldInput.phoneNumber%>">
        </div>
        <div class="form__container form__container_w">
            <input 
            type="password" 
            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>  form__input" 
            id="password" 
            name="password" 
            placeholder="Password"
            value="<%= oldInput.password%>">
        </div>
        <div class="form__container form__container_w">
            <input 
            type="password" 
            class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>  form__input" 
            name="confirmPassword" 
            id="confirmPassword"
            placeholder="Confirm Password"
            value="<%= oldInput.confirmPassword %>">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button class="form__button">SIGNUP</button>
        <p class="form__p form__p_color">
            By join, you agree with the<a href="#"> Terms of Service </a> and the <a href="#">Privacy Policies </a> of
            the site.<br>
            Want to register as a Bloodbank account? <a href="#"> Click here</a>
        </p>
    </form>
    <!--  start footer -->
    <footer class="footer" id="footer">
        <div class="footer__containers">
          <div>
            <h2 class="footer__h2">Blood Donate<span>e</span></h2>
            <div class="footer__icons">
              <span><i class="fab fa-facebook fa-lg"></i></span>
              <span><i class="fab fa-twitter fa-lg"></i></span>
              <span><i class="fab fa-instagram fa-lg"></i></span>
              <span><i class="fab fa-youtube fa-lg"></i></span>
              <span><i class="fab fa-linkedin-in fa-lg"></i></span>
            </div>
            <p class="footer__p">
              &copy; 2020 Created By TownMonkeys All Rights Reserved
            </p>
          </div>
          <div>
            <h3 class="footer__h3">Our Newsletter</h3>
            <p class="footer__p">Enter Your Email To Get Our News Update</p>
            <form>
              <input
                class="footer__input"
                type="email"
                name="subscribe"
                placeholder="Enter Your Email"
              />
              <button class="button dark">Submit</button>
            </form>
          </div>
        </div>
        <div class="footer__quotes">
          <p class="quotes">Every Blood Donor Is A Life Saver</p>
        </div>
      </footer>
    <!-- End Footer -->


    <!-- End Footer -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var showHeaderAt = 150;

            var win = $(window),
                body = $('body');

            // Show the fixed header only on larger screen devices

            if (win.width() > 400) {

                // When we scroll more than 150px down, we set the
                // "fixed" class on the body element.

                win.on('scroll', function (e) {

                    if (win.scrollTop() > showHeaderAt) {
                        body.addClass('fixed');
                    }
                    else {
                        body.removeClass('fixed');
                    }
                });

            }

        });
    </script>















