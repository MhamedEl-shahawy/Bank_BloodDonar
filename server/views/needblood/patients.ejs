<body>
  <section class="main">
    <%- include('../includes/navigation.ejs') %>
    <div class="main-content tabcontent" id="needBlood">
      <div class="new-items ">
           <div class="new-items_conatiner">
             <h2>need bloods</h2>
             <p class="red">needs quantity</p>
           <form class="new-items_form">	 
              <label class="new-items_label" for="type">blood type</label>
              <select class="new-items_select type">
                <option value="a+">a+</option>
                <option value="a-">a-</option>
                <option value="o+">o+</option>
                <option value="o-">o-</option>
                <option value="b+">b+</option>
                <option value="b-">b-</option>
                <option value="ab+">ab+</option>
                <option value="ab-">ab-</option>
              </select>
              <label class="new-items_label" for="department">Department</label>
              <input class="new-items_input" type="text" name="department">
              <label class="new-items_label" for="patient">Patient</label>
              <input class="new-items_input" type="text" name="patient">
              <label class="new-items_label" for="quantity">blood quantity</label>
              <input class="new-items_input" type="number" name="quantity">

           </form>	 
           <button class="add-new add-new_float addnew">create</button>
           </div>
         </div>
 <div class="pd-1">
      <div class="container">
         <button class="add-new addMain">new need</button>
        <table>
       <thead>
         <tr>
           <th scope="col">blood type</th>
           <th scope="col">department</th>
           <th scope="col">patient</th>
           <th scope="col">quantity</th>
           <th scope="col">date</th>
           <th scope="col" class="center">done</th>
           <th scope="col"></th>
         </tr>
       </thead>
       <tbody>
        <% if (patients.length > 0) {
          let i = itemCounterStartInCurrentPage;
          for (let patient of patients) { %>
         <tr>
           <td data-label="blood type" class="blood-type"><%= patient.bloodType %></td>
           <td data-label="department"><%= patient.department %></td>
           <td data-label="patient"> <%= patient.patientName %></td>
           <td data-label="quantity"> <%= patient.quantity %></td>
            <td data-label="date">  <%=patient.date%></td>
           <td data-label="done"><p class="not-done"></p></td>
          <!--  <td data-label="edit">
             <span><a><i class="fas fa-edit"></i></a></span>
             <span><a><i class="fas fa-trash-alt"></i></a></span>

           </td> -->
           <% if (isAuthenticated && patient.userId._id.toString() === currentUser._id.toString()) { %>
            <td data-label="edit" class="right">
              <span><a href="/edit-neededBlood/<%= patient._id %>?edit=true"><i class="fas fa-edit"></i></a></span>
              <span><a><i class="fas fa-trash-alt"></i></a></span>
            </td>
          
            
            <div class="myItem">
              <form action="delete-patient" method="POST">
                <input type="hidden" value="<%= patient._id %>" name="patientId">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button class="myButtonThatLooksLikeLink" type="submit">Delete</button>
              </form>
              <% } %>
            </div>
          </tr> 
          <% i--; } %>
        <% } else { %>
          <p>No Patients found.</p>
          <% } %>
       
           
       </tbody>
    </table>
      </div> 		
 </div>
</div>
