<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%-include('../includes/userNavigation.ejs')%>
    <main>
      <div class="main__nav">
        <div class="main__nav--header">
          <h3>Donor Snapshot</h3>
          <img src="/images/user/profile.svg" alt="Donor Snapshot avatar" />
        </div>
        <div class="main__nav--desc">
          <h4>Search Schedules:</h4>
          <a href="searchcenter.html">Donor Centers</a>
          <a href="mapbased.html">Map Based</a>
          <a href="#">Zip Code Search</a>
          <h4>Appointments:</h4>
          <a href="userAppointment.html">My Appointments</a>
        </div>
      </div>
      <div class="main__info">
        <h2>Search by Zip</h2>
        <p>
          We value your time and do our best to provide donor centers and mobile
          drives that are convenient for you.
        </p>
        <div>
          <form action="">
            <label for="zipCode">Zip Code:</label>
            <input type="number" name="zipCode" id="zipCode" /> <br />
            <!-- Start Date -->
            <label for="startDate">Start Date:</label>
            <input type="date" name="startdate" id="startDate" /> <br />
            <!-- End Date -->
            <label for="endDate">End Date:</label>
            <input type="date" name="enddate" id="endDate" /> <br />
            <!-- Distance range -->
            <br />
            <div class="form-group">
              <label class="control-label" for="show_mobiles"
                >Mobile Drives:</label
              >
              <input type="checkbox" name="show_mobiles" value="1" checked="checked" />
              <!-- <div is="0" class="btn-group" tabindex="0">
                <a is="0" class="btn btn-default">No</a>
                <a is="1" class="btn active btn-success">Yes</a>
              </div> -->
            </div>
            <!-- Donation Type -->
            <label for="donationType:">Donation Type</label>
            <select name="donationType" id="donationType">
              <option value="0" selected>Any</option>
              <option value="1">Automated Red Cell</option>
              <option value="2">Plasma</option>
              <option value="3">Platelet</option>
              <option value="4">Whole Blood</option>
            </select>
            <br />
            <button type="submit">Search</button>
            <button type="reset">Reset</button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
