<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%-include('../includes/userNavigation.ejs')%>
    <main>
      <div class="main__nav">
        <div class="main__nav--header">
          <h3>Donor Snapshot</h3>
          <img src="/images/user/profile.svg" alt="Donor Snapshot avatar" />
        </div>
        <div class="main__nav--desc">
          <h4>Search Schedules:</h4>
          <a href="#">Donor Centers</a>
          <a href="#">Map Based</a>
          <a href="#">Zip Code Search</a>
          <a href="#">County Search</a>
          <a href="#">City Search</a>
          <a href="#">Sponsor Name Search</a>
          <a href="#">Sponsor Code Search</a>
          <h4>Appointments:</h4>
          <a href="userAppointment.html">My Appointments</a>
        </div>
      </div>
      <div class="main__info">
        <h2 class="header">My Appointments</h2>
        <p>
          Your upcoming appointments are below.
        </p>

        <%if (donors.length > 0) {
          donors.forEach(donor => { %>

            <% if (isAuthenticated && donor.email === currentUser.email) { %>
              <div>
                <label for="">Future Appointments</label>
                <div><%= donor.donationDay %></div>

                <label for="">Past Appointments</label>
                <div><%= donor.nextDonationDay %></div>
              </div>
              <% } %>
              <% }) %>

              <% } else { %>
                <div>Nothing To Show</div>
                <% } %>

      </div>
    </main>
  </body>
</html>
