<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%-include('../includes/userNavigation.ejs')%>
    <main>
      <div class="main__info">
        <!-- <h2 class="header">My Account</h2> -->
        <p>
          Update your account at any time by clicking the "Edit" button below.
        </p>
        <form class="form-user" action="">
          <% users.forEach(user => { %>
              <% if (isAuthenticated && user._id.toString() === currentUser._id.toString()) { %>
                <table>
                  <tbody>
                    <tr >
                    <td> <label for="firstname" class="control-label">First Name:</label></td>
                    <td> <label for="firstname" class="value"><%= user.firstName%></label></td>
                    </tr>
                    <tr >
                      <td><label for="lastname" class="control-label">Last Name:</label></td>
                      <td><label for="lastname" class="value"><%= user.lastName %></label></td>
                    </tr>
                    <tr >
                    <td> <label for="username" class="control-label">User Name:</label></td>
                      <!-- <%= user.firstName.concat('',user.lastName)%> -->
                      <td><label for="username" class="value"><%= user.firstName.concat(' ',user.lastName)%></label></td>
                    </tr>
                    <tr >
                      <td><label for="PrimaryEmail" class="control-label"
                        >Primary Email:</label
                      ></td>
                    <td> <label for="PrimaryEmail" class="value"><%= user.email%></label></td>
                    </tr>
                    <tr >
                      <td><label for="enableAvatar" class="control-label">City:</label></td>
                    <td> <label for="enableAvatar" class="value"><%= user.city%></label></td>
                    </tr>
                    <tr >
                      <td><label for="enableAvatar" class="control-label">Phone:</label></td>
                    <td> <label for="enableAvatar" class="value"><%= user.phoneNumber%></label></td>
                    </tr>
                    <tr >
                      <td><label for="avatarPreview" class="control-label">Blood Type:</label></td>
                      <td> <label for="avatarPreview" class="value"><%= user.bloodType %></label></td>
                    </tr>
                  </tbody>
                  <tfoot>
                  </tfoot>
                </table>

                <a class="btn" href="/donor/<%= user.id %>/edit"><span>Edit</span></a>
                <a class="btn-back" href="/donor/home/index">Back to Home</a>

            <% } %>
          <%})%>
        </form>
      </div>
    </main>
  </body>
</html>
