<%- include('../includes/head.ejs')%>
</head>

<body>
  <%-include('../includes/userNavigation.ejs')%>
  <main>
    <div class="main__nav">
      <div class="main__nav--header">
        <h3>Donor Snapshot</h3>
        <img src="/images/user/profile.svg" alt="Donor Snapshot avatar" />
      </div>
      <div class="main__nav--desc">
        <h4>Search Schedules:</h4>
        <a href="searchcenter.html">Donor Centers</a>
        <a href="#">Map Based</a>
        <a href="#">Zip Code Search</a>
        <a href="#">County Search</a>
        <a href="#">City Search</a>
        <a href="#">Sponsor Name Search</a>
        <a href="#">Sponsor Code Search</a>
        <h4>Appointments:</h4>
        <a href="userAppointment.html">My Appointments</a>
      </div>
    </div>
    <div class="main__info">
      <h2 class="header">Search City</h2>
      <p>
        We value your time and do our best to provide donor centers and mobile
        drives that are convenient for you.
      </p>
      <form class="user-search" action="/donor/schedules/city" method="GET">
        <!-- <label>Name</label> -->
        <input type="text" name="city" placeholder="Enter city" value="<%= searchOptions.city %>">
        <button type="submit">Search</button>
      </form>
      <br>

      <div class="form-search">
        <!-- <h4 >Names list</h4> -->
      <% users.forEach(user => { %>
          <%if(user.city === searchOptions.city) { %>
            <div class="result">
              <div class="grid">
                <img src="/images/user/profile.svg" alt="User avatar" />
                <div class="result__desc">
                  <div><%= user.firstName.concat(' ',user.lastName) %></div>
                  <div><%= user.bloodType%></div>
                  <!-- <div><%= user.phoneNumber%></div> -->
                </div>
              </div>
              <form  action="/donor/schedules/city" method="POST">
                <input  class="disabled" type="email" name="email" id="email" value="<%= user.email %>" placeholder="Enter Your email....">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <button class="btn " type="submit">Send Email</button>
              </form>
            </div>
          <% }%>
      <% })  %>
      </div>


  </main>
</body>

</html>