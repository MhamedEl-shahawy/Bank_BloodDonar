<%- include('../includes/head.ejs')%>
</head>

<body>
  <%-include('../includes/userNavigation.ejs')%>
  <main>
    <div class="main__nav">
      <div class="main__nav--header">
        <h3>Donor Snapshot</h3>
        <img src="/images/user/profile.svg" alt="Donor Snapshot avatar" />
      </div>
      <div class="main__nav--desc">
        <h4>Search Schedules:</h4>
        <a href="searchcenter.html">Donor Centers</a>
        <a href="#">Map Based</a>
        <a href="#">Zip Code Search</a>
        <a href="#">County Search</a>
        <a href="#">City Search</a>
        <a href="#">Sponsor Name Search</a>
        <a href="#">Sponsor Code Search</a>
        <h4>Appointments:</h4>
        <a href="userAppointment.html">My Appointments</a>
      </div>
    </div>
    <div class="main__info">
      <h2>Search City</h2>
      <p>
        We value your time and do our best to provide donor centers and mobile
        drives that are convenient for you.
      </p>
      <form action="/donor/schedules/city" method="GET">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
        <button type="submit">Search</button>
      </form>
      <br>
      <% cities.forEach(city => { %>
        <%if(city.name === searchOptions.name) { %>
        <div><%= city.name %></div>
        <div><%= city.hospital%></div>
        <div><%= city.address%></div>
        <div><%= city.phoneNumber%></div>
        <br>
        <br>

            <% }%>
      <% })  %>

    </div>

  </main>
</body>

</html>