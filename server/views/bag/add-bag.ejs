
<%- include('../includes/navigation.ejs') %>
<section class="main">
<div class="main-content tabcontent" id="patient">
  <form action="/add-bag" method="POST">
    <div class="new-items ">
      <div class="new-items_conatiner">
        <h2>new blood bags</h2>
        <p class="red">bags info</p>
      <form class="new-items_form">	 
         <label class="new-items_label" for="type">blood type</label>
         <select class="new-items_select type">
           <option value="a+">a+</option>
           <option value="a-">a-</option>
           <option value="o+">o+</option>
           <option value="o-">o-</option>
           <option value="b+">b+</option>
           <option value="b-">b-</option>

           <option value="ab+">ab+</option>
           <option value="ab-">ab-</option>
         </select>
         <label class="new-items_label" for="charity">Charity Name</label>
