         <input class="new-items_input" type="text" name="donarName">
         <label class="new-items_label" for="quantity">blood quantity</label>
         <input class="new-items_input" type="number" name="quantity">

      </form>	 
      <button class="add-new add-new_float addnew">create</button>
      </div>
    </div>
    
      </form>	 
      
    </div>
    
    
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" /> 
    <button class="myButton" type="submit">Submit</button>
  </form>
</div>
</section>

