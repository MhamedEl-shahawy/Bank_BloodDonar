<body>
  <section class="main">
    <%- include('../includes/navigation.ejs') %>
    <div class="main-content tabcontent" id="bags">
      <div class="new-items ">
            <div class="new-items_conatiner">
              <h2>new blood bags</h2>
              <p class="red">bags info</p>
            <form class="new-items_form">	 
               <label class="new-items_label" for="type">blood type</label>
               <select class="new-items_select type">
                 <option value="a+">a+</option>
                 <option value="a-">a-</option>
                 <option value="o+">o+</option>
                 <option value="o-">o-</option>
                 <option value="b+">b+</option>
                 <option value="b-">b-</option>

                 <option value="ab+">ab+</option>
                 <option value="ab-">ab-</option>
               </select>
               <label class="new-items_label" for="charity">Charity Name</label>
               <input class="new-items_input" type="text" name="charity">
               <label class="new-items_label" for="donarName">Donar Name</label>
               <input class="new-items_input" type="text" name="donarName">
               <label class="new-items_label" for="quantity">blood quantity</label>
               <input class="new-items_input" type="number" name="quantity">

            </form>	 
            <button class="add-new add-new_float addnew">create</button>
            </div>
          </div>
  <div class="pd-1">
       <div class="container">
          <button class="add-new addMain">new bags</button>
         <table>
        <thead>
          <tr>
            <th scope="col">blood type</th>
            <th scope="col">charity name</th>
            <th scope="col">donar name</th>
            <th scope="col">quantity</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if (bags.length > 0) {
            let i = itemCounterStartInCurrentPage;
            for (let bag of bags) { %>
          <tr>
            <td data-label="blood type" class="blood-type"><%= bag.bloodType %></td>
            <td data-label="charity name">  <%= bag.charityName %></td>
            <td data-label="donar name"><%= bag.donorName %></td>
            <td data-label="quantity"> <%= bag.bloodQuantity %></td>
        
            <% if (isAuthenticated && bag.userId._id.toString() === currentUser._id.toString()) { %>
              <td data-label="edit" class="right">
                <span><a href="/edit-bag/<%= bag._id %>?edit=true"><i class="fas fa-edit"></i></a></span>
                <span><a><i class="fas fa-trash-alt"></i></a></span>
              </td>
            
              
              <div class="myItem">
                <form action="delete-bag" method="POST">
                  <input type="hidden" value="<%= bag._id %>" name="bagId">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <button class="myButtonThatLooksLikeLink" type="submit">Delete</button>
                </form>
                <% } %>
              </div>
            </tr> 
            <% i--; } %>
          <% } else { %>
            <p>No Patients found.</p>
            <% } %>
          </tbody>
     </table>
       </div> 		
  </div>
</div> 
