<%- include('../includes/top.ejs') %>

</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="myContainer center">

    <p>Comment initially posted at:
      <%= patient.date %>
    </p>
    <form action="/edit-bag" method="POST">

      <label for="bloodtype">Blood Type</label>
      <select class="new-items_select type" name="bloodType" id="bloodType">
          <option value="a+">a+</option>
          <option value="a-">a-</option>
          <option value="o+">o+</option>
          <option value="o-">o-</option>
          <option value="b+">b+</option>
          <option value="b-">b-</option>
          <option value="ab+">ab+</option>
          <option value="ab-">ab-</option>
          <option value="<%if(editing) {%><%=blood.bloodType%><% } %>">
          <%if(editing) {%><%=bag.bloodType%><% } %></option>
      </select>
      
      <label for="charityName">Charity Name</label>
      <input type="text" name="charityName" id="charityName" value="<% if (editing) { %><%= bag.charityName %><% } %>">
      
      <label for="donorName">Donor Name</label>
      <input type="text" name="donorName" id="donorName" value="<% if (editing) { %><%= bag.donorName %><% } %>">
      
      <label for="bloodQuantity">Quantity</label>
      <input type="text" name="bloodQuantity" id="bloodQuantity" value="<% if (editing) { %><%= bag.bloodQuantity %><% } %>">
    
      
      <% if (editing) { %>
      <input type="hidden" value="<%= bag._id %>" name="bagId">
      <% } %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="myButton" type="submit">Submit</button>
    </form>
  </main>

  <%- include('../includes/bottom.ejs') %>