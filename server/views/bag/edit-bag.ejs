<%- include('../includes/navigation.ejs') %>
<section class="main">
  <div class="main-content tabcontent" id="patient">
    
      <div class="new-items ">
        <div class="new-items_conatiner">
          <h2>new blood bags</h2>
          <p class="red">bags info</p>
          <p class="red">    <%= patient.date %></p>
          <form action="/edit-bag" method="POST" class="new-items_form">
        
            <label class="new-items_label" for="bloodType">Blood Type</label>
            <select class="new-items_select type" name="bloodType" id="bloodType">
              <option value="a+">a+</option>
              <option value="a-">a-</option>
              <option value="o+">o+</option>
              <option value="o-">o-</option>
              <option value="b+">b+</option>
              <option value="b-">b-</option>
              <option value="ab+">ab+</option>
              <option value="ab-">ab-</option>
              <option value="<%if(editing) {%><%=blood.bloodType%><% } %>">
                <%if(editing) {%><%=bag.bloodType%><% } %></option>
            </select>
            <label class="new-items_label" for="charityName">Charity Name</label>
            <input class="new-items_input" type="text" name="charityName" id="charityName" value="<% if (editing) { %><%= bag.charityName %><% } %>">
      
            <label class="new-items_label" for="donorName">Donor Name</label>
            <input class="new-items_input" type="text" name="donorName" id="donorName" value="<% if (editing) { %><%= bag.donorName %><% } %>">
      
            <label class="new-items_label" for="bloodQuantity">Quantity</label>
            <input class="new-items_input" type="text" name="bloodQuantity" id="bloodQuantity" value="<% if (editing) { %><%= bag.bloodQuantity %><% } %>" />
      
            <% if (editing) { %>
              <input type="hidden" value="<%= bag._id %>" name="bagId">
              <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" /> 
            <button class="add-new add-new_float addnewrs" type="submit">Submit</button>
          </form>
        
        </div>
      </div>
 
      </div>
  </section>
 

  <%- include('../includes/bottom.ejs') %>