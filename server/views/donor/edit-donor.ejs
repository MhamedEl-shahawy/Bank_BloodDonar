<%- include('../includes/top.ejs') %>

</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="myContainer center">

    <p>Comment initially posted at:
      <%= comment.date %>
    </p>
    <form action="/edit-donor" method="POST">

      <label for="donor">Donor Name</label>
      <input type="text" name="donorName" id="donorName" value="<% if (editing) { %><%= donor.donorName %><% } %>">

      <label for="nationalId">National Id</label>
      <input type="text" name="nationalId" id="nationalId" value="<% if (editing) { %><%= donor.nationalId %><% } %>">

      <label for="phoneNumber">Phone Number</label>
      <input type="text" name="phoneNumber" id="phoneNumber" value="<% if (editing) { %><%= donor.phoneNumber %><% } %>">

      <label for="address">Address</label>
      <input type="text" name="address" id="address" value="<% if (editing) { %><%= donor.address %><% } %>">

     <label for="bloodtype">Blood Type</label>
      <select class="new-items_select type" name="bloodType" id="bloodType">
          <option value="a+">a+</option>
          <option value="a-">a-</option>
          <option value="o+">o+</option>
          <option value="o-">o-</option>
          <option value="b+">b+</option>
          <option value="b-">b-</option>
          <option value="ab+">ab+</option>
          <option value="ab-">ab-</option>
          <option value="<%if(editing) {%><%=donor.bloodType%><% } %>">
          <%if(editing) {%><%=donor.bloodType%><% } %></option>
      </select>

      <label for="donationDay">Donation Day</label>
      <input type="date" name="donationDay" id="donationDay" value="<% if (editing) { %><%= donor.donationDay %><% } %>">

      <label for="nextDonationDay">Next Donation Day</label>
      <input type="date" name="nextDonationDay" id="nextDonationDay" value="<% if (editing) { %><%= donor.nextDonationDay %><% } %>">
      
      <% if (editing) { %>
      <input type="hidden" value="<%= donor._id %>" name="donorId">
      <% } %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="myButton" type="submit">Submit</button>
    </form>
  </main>

  <%- include('../includes/bottom.ejs') %>